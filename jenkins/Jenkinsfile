pipeline {
    agent any

    environment {
        IMAGE_NAME = "aiops-app"
        IMAGE_TAG  = "1.1"
        CLUSTER    = "aiops-cluster"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t $IMAGE_NAME:$IMAGE_TAG -f docker/Dockerfile .
                '''
            }
        }

        stage('Load Image into kind') {
            steps {
                sh '''
                kind load docker-image $IMAGE_NAME:$IMAGE_TAG --name $CLUSTER
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                kubectl apply -f k8s/
                kubectl rollout restart deployment aiops-app
                '''
            }
        }
    }
}

